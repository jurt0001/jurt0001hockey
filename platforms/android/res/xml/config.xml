<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.jurt0001.jurthockey" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>jurt0001hockey </name>
    <description>
        This is a hockey based application to show scores and standings for the NHL. They stats are fake. Sorry :(
    </description>
    <author email="jurt0001@algonquinlive.com" href="https://github.com/jurt0001">
        Christian Jurt
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-mdpi" src="www/img/splash/MDPI-Landscape-480x320px.png" />
    <splash density="land-hdpi" src="www/img/splash/HDPI-Landscape-800px480px.png" />
    <splash density="land-xhdpi" src="www/img/splash/XHDPI-Landscape-1280x720px.png" />
    <splash density="land-xxhdpi" src="www/img/splash/XXHDPI-Landscape-1600x960px.png" />
    <splash density="land-xxxhdpi" src="www/img/splash/XXXHDPI--Landscape-1920x1280px.png" />
    <splash density="port-mdpi" src="www/img/splash/MDPI-Portrait-320x480px.png" />
    <splash density="port-hdpi" src="www/img/splash/HDPI-Portrait-480x800px.png" />
    <splash density="port-xhdpi" src="www/img/splash/XHDPI-Portrait-720px1280px.png" />
    <splash density="port-xxhdpi" src="www/img/splash/XXHDPI-Portrait-960px1600px.png" />
    <splash density="port-xxxhdpi" src="www/img/splash/XXXHDPI-Portrait-1280px1920px.png" />
    <icon density="mdpi" src="www/img/launcher/MDPI- 48X48.png" />
    <icon density="hdpi" src="www/img/launcher/HDPI- 72X72.png" />
    <icon density="xhdpi" src="www/img/launcher/HDPI- 96X96.png" />
    <icon density="xxhdpi" src="www/img/launcher/XXHDPI- 144X144.png" />
    <icon density="xxxhdpi" src="www/img/launcher/XXXHDPI- 192X192.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
</widget>

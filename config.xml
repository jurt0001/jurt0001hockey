<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.jurt0001.jurthockey" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>jurt0001hockey </name>
    
    <description>
        This is a hockey based application to show scores and standings for the NHL. They stats are fake. Sorry :(
    </description>
    
    <author email="jurt0001@algonquinlive.com" href="https://github.com/jurt0001">
        Christian Jurt
    </author>
    
    
    <content src="index.html" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
       
        <allow-intent href="market:*" />
        
    <!-- you can use any density that exists in the Android project -->     
        <splash src="www/img/splash/MDPI-Landscape-480x320px.png"    density="land-mdpi"/>
        <splash src="www/img/splash/HDPI-Landscape-800px480px.png"    density="land-hdpi"/>
        <splash src="www/img/splash/XHDPI-Landscape-1280x720px.png" density="land-xhdpi"/>
        <splash src="www/img/splash/XXHDPI-Landscape-1600x960px.png"  density="land-xxhdpi"/>
        <splash src="www/img/splash/XXXHDPI--Landscape-1920x1280px.png" density="land-xxxhdpi"/>
        <!---->
        <splash src="www/img/splash/MDPI-Portrait-320x480px.png"    density="port-mdpi"/>
        <splash src="www/img/splash/HDPI-Portrait-480x800px.png"    density="port-hdpi"/>
        <splash src="www/img/splash/XHDPI-Portrait-720px1280px.png" density="port-xhdpi"/>
        <splash src="www/img/splash/XXHDPI-Portrait-960px1600px.png"  density="port-xxhdpi"/>
        <splash src="www/img/splash/XXXHDPI-Portrait-1280px1920px.png" density="port-xxxhdpi"/>
        <!---->
        <icon src="www/img/launcher/MDPI- 48X48.png"   density="mdpi" />
        <icon src="www/img/launcher/HDPI- 72X72.png"   density="hdpi" />
        <icon src="www/img/launcher/HDPI- 96X96.png" density="xhdpi" />
        <icon src="www/img/launcher/XXHDPI- 144X144.png" density="xxhdpi" />
        <icon src="www/img/launcher/XXXHDPI- 192X192.png" density="xxxhdpi" />
        <!---->   
            
    </platform>
      <preference name="AutoHideSplashScreen" value="true" /> <!-- don't wait for script to hide the splashscreen -->
    <preference name="SplashScreenDelay" value="5000" />  <!--  wait 10 seconds before hiding splashscreen -->
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <platform name="ios">
       
       
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
